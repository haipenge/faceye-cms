<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
    <!-- 模块:cms 业务对像:Smtp 管理后台 tiles模板配置 -->
    <!-- 作者:haipege -->
    <!-- Smtp 管理 首页(列表页) -->
	<definition name="cms.smtp.manager" extends="default.cms.manager">
	    <put-attribute name="default-center" value="cms.smtp.center"></put-attribute>
	</definition>
	<definition name="cms.smtp.center" extends="default.cms.center">
	    <put-attribute name="default-center-right" value="/component/cms/smtp/smtp_center.jsp"></put-attribute>
	</definition>
	
	<!-- Smtp 新增,编辑页面 -->
	<definition name="cms.smtp.update" extends="default.cms.manager">
	    <put-attribute name="default-center" value="cms.smtp.update.center"></put-attribute>
	</definition>
	<definition name="cms.smtp.update.center" extends="default.cms.center">
	    <put-attribute name="default-center-right" value="/component/cms/smtp/smtp_update.jsp"></put-attribute>
	</definition>
	
	<!-- Smtp 明细页 -->
	<definition name="cms.smtp.detail" extends="default.cms.manager">
	    <put-attribute name="default-center" value="cms.smtp.detail.center"></put-attribute>
	</definition>
	<definition name="cms.smtp.detail.center" extends="default.cms.center">
	    <put-attribute name="default-center-right" value="/component/cms/smtp/smtp_detail.jsp"></put-attribute>
	</definition>
	
</tiles-definitions>
